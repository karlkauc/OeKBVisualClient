<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox styleClass="mainPane" spacing="25" padding="30"
      stylesheets="@../css/modern-theme.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.DataUpload">

    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Data Upload" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button styleClass="btn-info">
            <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../img/icons8-xml-40.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Upload Messages Card -->
    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <Label text="Upload Log" styleClass="section-title"/>
        <TextArea fx:id="dataUploadMessage" styleClass="dataUploadTextBox"
                     VBox.vgrow="ALWAYS" prefHeight="300"/>
    </VBox>

    <!-- Drag & Drop Zone -->
    <StackPane fx:id="dataUpload" styleClass="dataUploadPane"
               onDragDropped="#dataUploadDropped" onDragOver="#onDataUpload"
               prefHeight="150" minHeight="150">
        <VBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../img/icons8-upload-to-ftp-40.png"/>
            </ImageView>
            <Label text="DROP XML FILES HERE" styleClass="section-title">
                <font>
                    <Font size="20.0" name="System Bold"/>
                </font>
            </Label>
            <Label text="or click to browse" styleClass="label-secondary">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </StackPane>
</VBox>

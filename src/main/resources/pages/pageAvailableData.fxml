<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AvailableData"
            prefHeight="700.0" prefWidth="900.0"
            style="-fx-background-color: #f5f5f5;">

    <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="VerfÃ¼gbare Daten abfragen" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </HBox>

        <Separator/>

        <!-- Parameters Section -->
        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
            <Label text="Abfrage-Parameter:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <HBox spacing="20.0">
                <VBox spacing="5.0">
                    <Label text="Content Date (optional):"/>
                    <HBox spacing="5.0">
                        <DatePicker fx:id="contentDatePicker" prefWidth="200.0"/>
                        <Button text="Clear" onAction="#clearContentDate"
                                  style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="FDP Content Type:"/>
                    <ComboBox fx:id="fdpContentCombo" prefWidth="150.0"/>
                </VBox>
            </HBox>

            <Separator/>

            <Label text="Upload-Zeitraum (nur wenn Content Date leer):" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>

            <HBox spacing="20.0">
                <VBox spacing="5.0">
                    <Label text="Upload Date From:"/>
                    <DatePicker fx:id="uploadDateFromPicker" prefWidth="200.0"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Upload Date To:"/>
                    <DatePicker fx:id="uploadDateToPicker" prefWidth="200.0"/>
                </VBox>
            </HBox>

            <Label fx:id="infoLabel" text="" wrapText="true"
                   style="-fx-text-fill: #f39c12; -fx-font-size: 12px;"/>

            <Separator/>

            <VBox spacing="5.0">
                <Label text="Identifier Filter (optional):"/>
                <TextField fx:id="identifierField"
                             promptText="LEI/OeNB-ID oder ISIN (mehrere durch Leerzeichen getrennt)"
                             prefWidth="700.0"/>
            </VBox>
        </VBox>

        <!-- Action Section -->
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Button fx:id="downloadButton"
                      text="Abfrage starten"
                      onAction="#download"
                      style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Button>
            <ProgressIndicator fx:id="progressIndicator" prefWidth="30.0" prefHeight="30.0"/>
            <Label fx:id="statusLabel" text="Bereit" style="-fx-text-fill: #2c3e50;"/>
        </HBox>

        <!-- Result Section -->
        <VBox spacing="10.0" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
            <Label text="Ergebnis (XML):" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextArea fx:id="resultTextArea"
                        VBox.vgrow="ALWAYS"
                        prefHeight="250.0"
                        editable="false"
                        style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;"/>
        </VBox>

    </VBox>
</AnchorPane>

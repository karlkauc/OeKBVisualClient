<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" fitToHeight="true" stylesheets="@../css/modern-theme.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ApplicationSettings">
    <content>
        <VBox styleClass="mainPane" spacing="25" padding="30">
            <!-- Page Title -->
            <Label text="Application Settings" styleClass="page-title"/>

            <!-- OeKB Credentials Card -->
            <VBox styleClass="card" spacing="20">
                <Label text="OeKB Credentials" styleClass="section-title"/>
                <Separator/>

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="200"/>
                        <ColumnConstraints minWidth="150" prefWidth="200"/>
                    </columnConstraints>

                    <JFXTextField fx:id="userNameField" labelFloat="true"
                                  promptText="Username" styleClass="label-primary"
                                  GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                    <JFXPasswordField fx:id="passwordField" labelFloat="true"
                                      promptText="Password" styleClass="label-primary"
                                      GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </VBox>

            <!-- Proxy Settings Card -->
            <VBox styleClass="card" spacing="20">
                <Label text="Proxy Configuration" styleClass="section-title"/>
                <Separator/>

                <JFXCheckBox fx:id="proxySystemSettings"
                             text="Use System Proxy Settings"
                             selected="true" styleClass="label-primary"/>

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="200"/>
                        <ColumnConstraints minWidth="150" prefWidth="200"/>
                    </columnConstraints>

                    <JFXTextField fx:id="proxyHost" labelFloat="true"
                                  promptText="Proxy Host"
                                  GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                    <JFXTextField fx:id="proxyPort" labelFloat="true"
                                  promptText="Proxy Port"
                                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <JFXTextField fx:id="proxyUser" labelFloat="true"
                                  promptText="Proxy User"
                                  GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                    <JFXPasswordField fx:id="proxyPassword" labelFloat="true"
                                      promptText="Proxy Password"
                                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Application Options Card -->
            <VBox styleClass="card" spacing="15">
                <Label text="Application Options" styleClass="section-title"/>
                <Separator/>

                <JFXCheckBox fx:id="jbOverwriteData"
                             text="Overwrite data without asking"
                             styleClass="label-primary"/>

                <JFXCheckBox fx:id="jbNewAccesRuleId"
                             text="Use new ID for Access Rights"
                             styleClass="label-primary"/>
            </VBox>

            <!-- Save Button -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <JFXButton fx:id="save" onAction="#saveSettings"
                           prefHeight="55.0" prefWidth="280.0"
                           styleClass="saveSetttings"
                           text="Save Application Settings">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../img/save.png"/>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="16.0" name="System Bold"/>
                    </font>
                </JFXButton>
            </HBox>
        </VBox>
    </content>
</ScrollPane>

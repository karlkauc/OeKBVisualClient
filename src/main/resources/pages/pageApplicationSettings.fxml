<?xml version="1.0" encoding="UTF-8"?>





<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>

<ScrollPane fitToWidth="true" stylesheets="@../css/modern-theme.css"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" pannable="true"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ApplicationSettings">
    <content>
        <VBox styleClass="mainPane" spacing="12">
            <padding>
                <Insets top="12" right="16" bottom="16" left="16"/>
            </padding>
            <!-- Page Title -->
            <Label text="Application Settings" styleClass="page-title-compact"/>

            <!-- OeKB Credentials Card -->
            <VBox styleClass="card-compact" spacing="10">
                <Label text="OeKB Credentials" styleClass="section-title-compact"/>
                <Separator/>

                <GridPane hgap="12" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180" prefWidth="240" hgrow="SOMETIMES"/>
                        <ColumnConstraints minWidth="180" prefWidth="240" hgrow="SOMETIMES"/>
                    </columnConstraints>

                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Username" styleClass="label-secondary-compact"/>
                        <TextField fx:id="userNameField" promptText="Enter username" styleClass="text-field-compact"/>
                    </VBox>

                    <VBox spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Password" styleClass="label-secondary-compact"/>
                        <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="text-field-compact"/>
                    </VBox>

                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Data Supplier (DDS)" styleClass="label-secondary-compact"/>
                        <TextField fx:id="dataSupplierField" promptText="Enter Data Supplier ID" styleClass="text-field-compact"/>
                    </VBox>
                </GridPane>
            </VBox>

            <!-- Proxy Settings Card -->
            <VBox styleClass="card-compact" spacing="10">
                <Label text="Proxy Configuration" styleClass="section-title-compact"/>
                <Separator/>

                <CheckBox fx:id="proxySystemSettings"
                             text="Use System Proxy Settings"
                             selected="true" styleClass="checkbox-compact"/>

                <GridPane hgap="12" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180" prefWidth="240" hgrow="SOMETIMES"/>
                        <ColumnConstraints minWidth="180" prefWidth="240" hgrow="SOMETIMES"/>
                    </columnConstraints>

                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Proxy Host" styleClass="label-secondary-compact"/>
                        <TextField fx:id="proxyHost" promptText="proxy.example.com" styleClass="text-field-compact"/>
                    </VBox>

                    <VBox spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Proxy Port" styleClass="label-secondary-compact"/>
                        <TextField fx:id="proxyPort" promptText="8080" styleClass="text-field-compact"/>
                    </VBox>

                    <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Proxy Username" styleClass="label-secondary-compact"/>
                        <TextField fx:id="proxyUser" promptText="Enter proxy username" styleClass="text-field-compact"/>
                    </VBox>

                    <VBox spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Proxy Password" styleClass="label-secondary-compact"/>
                        <PasswordField fx:id="proxyPassword" promptText="Enter proxy password" styleClass="text-field-compact"/>
                    </VBox>
                </GridPane>
            </VBox>

            <!-- Application Options Card -->
            <VBox styleClass="card-compact" spacing="10">
                <Label text="Application Options" styleClass="section-title-compact"/>
                <Separator/>

                <VBox spacing="6">
                    <CheckBox fx:id="jbOverwriteData"
                                 text="Overwrite data without asking" styleClass="checkbox-compact"/>

                    <CheckBox fx:id="jbNewAccesRuleId"
                                 text="Use new ID for Access Rights" styleClass="checkbox-compact"/>
                </VBox>
            </VBox>

            <!-- Save Button -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <padding>
                    <Insets top="8" bottom="8"/>
                </padding>
                <Button fx:id="save" onAction="#saveSettings"
                           prefHeight="36.0" minWidth="180.0"
                           styleClass="saveSetttings"
                           text="Save Settings">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../img/save.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </content>
</ScrollPane>

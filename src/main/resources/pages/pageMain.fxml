<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane prefHeight="900.0" prefWidth="1600.0"
            stylesheets="@../css/modern-theme.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainController">
    <top>
        <HBox styleClass="server-status-bar" prefHeight="35.0" alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="5.0" right="15.0" bottom="5.0" left="15.0"/>
            </padding>
            <Label text="Server:" styleClass="server-status-label"/>
            <Label fx:id="globalServerStatus" text="PRODUCTION SERVER" styleClass="server-status-prod"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="globalDdsStatus" text="" styleClass="dds-status-label"/>
        </HBox>
    </top>
    <bottom>
        <Pane prefHeight="20.0" prefWidth="1024.0" styleClass="bottom" BorderPane.alignment="CENTER">
            <TextArea id="debugMessages" fx:id="debugMessages" prefHeight="84.0" prefWidth="1385.0"/>
        </Pane>
    </bottom>
    <left>
        <Pane prefHeight="200.0" prefWidth="160.0" styleClass="left" BorderPane.alignment="CENTER">
            <VBox spacing="2.0">
                <Button id="settings" alignment="CENTER_RIGHT" onAction="#changeToSettings" prefHeight="45.0"
                           prefWidth="160.0" styleClass="settings" text="Settings" textFill="WHITE">
                    <graphic>
                        <FontIcon iconLiteral="bi-gear-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="accessRightsReceived" alignment="CENTER_RIGHT" onAction="#changeToAccessRightsReceived"
                           prefHeight="45.0" prefWidth="160.0" styleClass="accessRightsReceived" text="Rights Received">
                    <graphic>
                        <FontIcon iconLiteral="bi-key-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="accessRightsGrant" alignment="CENTER_RIGHT" onAction="#changeToAccessRightsGrant"
                           prefHeight="45.0" prefWidth="160.0" styleClass="accessRightsGrant" text="Grant Rights">
                    <graphic>
                        <FontIcon iconLiteral="bi-people-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToJournal" alignment="CENTER_RIGHT" onAction="#changeToJournal"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToJournal" text="Activity Journal">
                    <graphic>
                        <FontIcon iconLiteral="bi-journal-text" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToDataUpload" alignment="CENTER_RIGHT" onAction="#changeToDataUpload"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToDataUpload" text="Data Upload">
                    <graphic>
                        <FontIcon iconLiteral="bi-cloud-upload-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToOFI" alignment="CENTER_RIGHT" onAction="#changeToOFI"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToOFI" text="OeNB Meldung">
                    <graphic>
                        <FontIcon iconLiteral="bi-file-earmark-text-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToFundDownload" alignment="CENTER_RIGHT" onAction="#changeToFundDownload"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToFundDownload" text="Fund Download">
                    <graphic>
                        <FontIcon iconLiteral="bi-cloud-download-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToShareClassDownload" alignment="CENTER_RIGHT" onAction="#changeToShareClassDownload"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToShareClassDownload" text="ShareClass">
                    <graphic>
                        <FontIcon iconLiteral="bi-download" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToDocumentDownload" alignment="CENTER_RIGHT" onAction="#changeToDocumentDownload"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToDocumentDownload" text="Documents">
                    <graphic>
                        <FontIcon iconLiteral="bi-files" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToRegulatoryReporting" alignment="CENTER_RIGHT" onAction="#changeToRegulatoryReporting"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToRegulatoryReporting" text="Regulatory">
                    <graphic>
                        <FontIcon iconLiteral="bi-clipboard-check" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToAvailableData" alignment="CENTER_RIGHT" onAction="#changeToAvailableData"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToAvailableData" text="Available Data">
                    <graphic>
                        <FontIcon iconLiteral="bi-hdd-stack-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <Button id="changeToOwnDataDownloaded" alignment="CENTER_RIGHT" onAction="#changeToOwnDataDownloaded"
                           prefHeight="45.0" prefWidth="160.0" styleClass="changeToOwnDataDownloaded" text="Download Stats">
                    <graphic>
                        <FontIcon iconLiteral="bi-bar-chart-line-fill" iconSize="16" iconColor="WHITE"/>
                    </graphic>
                </Button>
                <VBox prefWidth="160.0" spacing="2.0">
                    <Label text="Server:" styleClass="meneuText" prefHeight="25.0" prefWidth="160.0"/>
                    <Button fx:id="prodServerButton" onAction="#changeToProdServer"
                            styleClass="server-button-prod" text="PRODUCTION"
                            prefHeight="35.0" prefWidth="160.0">
                        <graphic>
                            <FontIcon iconLiteral="bi-shield-fill-check" iconSize="14" iconColor="WHITE"/>
                        </graphic>
                    </Button>
                    <Button fx:id="devServerButton" onAction="#changeToDevServer"
                            styleClass="server-button-dev" text="DEVELOPMENT"
                            prefHeight="35.0" prefWidth="160.0">
                        <graphic>
                            <FontIcon iconLiteral="bi-code-slash" iconSize="14" iconColor="WHITE"/>
                        </graphic>
                    </Button>
                </VBox>
                <CheckBox fx:id="fileSystem" mnemonicParsing="false" text="file System"
                          BorderPane.alignment="CENTER" onAction="#changeFileSystem" visible="false"/>
                <!--
                <Button id="fundsXMLDataDownload" alignment="CENTER_RIGHT" onAction="#changeToDataDownload"
                           prefHeight="60.0" prefWidth="200.0" styleClass="fundsXMLDataDownload" text="Data Download">
                </Button>
                -->
                <!--
                <Button id="history" alignment="CENTER_RIGHT" onAction="#changeToHistory" prefHeight="60.0"
                           prefWidth="200.0" styleClass="history" text="History">
                </Button>
                -->
            </VBox>
        </Pane>
    </left>
    <center>
        <AnchorPane id="mainPane" fx:id="mainPane" styleClass="mainPane"/>
    </center>
</BorderPane>
